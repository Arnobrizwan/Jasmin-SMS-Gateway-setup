# Jasmin SMS Gateway Docker Setup
# Copy this file to .env and modify as needed

# Core networking / exposure
JASMIN_HTTP_PORT=1401
JASMIN_JCLI_PORT=8990
JASMIN_SMPP_PORT=2775

# Docker internal hostnames (services share a network)
REDIS_HOST=redis
RABBITMQ_HOST=rabbitmq

# RabbitMQ management (optional external)
RABBITMQ_MGMT_PORT=15692

# Optional domain / external base URL (placeholder)
PUBLIC_BASE_URL=http://localhost

# Default HTTP API test user (safe to change later)
HTTP_TEST_USERNAME=foo
HTTP_TEST_PASSWORD=bar

# Optional SMPP connector placeholders (no real binding by default)
# Set SMPP_HOST to a real IP to enable SMPP connector creation
SMPP_CID=DEMO_CONNECTOR
SMPP_HOST=172.16.10.67
SMPP_PORT=2775
SMPP_USERNAME=smppclient1
SMPP_PASSWORD=password
SMPP_THROUGHPUT=100

# Monitoring toggles (used in docs)
ENABLE_MONITORING=false

# Resource limits (can be tuned)
JASMIN_CPU=1
JASMIN_MEM=512m
RABBITMQ_CPU=0.5
RABBITMQ_MEM=512m
REDIS_CPU=0.2
REDIS_MEM=256m
PROM_CPU=0.2
PROM_MEM=256m
GRAFANA_CPU=0.5
GRAFANA_MEM=256m

# Grafana configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# Prometheus configuration
PROMETHEUS_PORT=9090
